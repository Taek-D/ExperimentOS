{
  "permissions": {
    "allow": [
      "Bash(python -m pytest:*)",
      "Bash(pylint:*)",
      "Bash(mypy:*)",
      "Bash(black:*)",
      "Bash(pip install:*)",
      "Bash(uvicorn:*)",
      "Bash(streamlit:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm install:*)",
      "Bash(npx tsc:*)",
      "Bash(git add:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "WebSearch",
      "WebFetch(domain:sandroroth.com)",
      "mcp__vercel__deploy_to_vercel"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo $CLAUDE_FILE_PATH | grep -q '\\.py$' && black --line-length 100 --quiet $CLAUDE_FILE_PATH 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
